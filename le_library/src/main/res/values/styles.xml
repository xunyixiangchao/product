    <style name="anim_bottom">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="anim_right">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="button_bg_text_style" parent="le_style_button_square_default">
        <item name="android:textSize">14dip</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="public_button_bg_style">
        <item name="android:textSize">@dimen/leyou_text_size_3</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:background">@drawable/selector_public_button</item>
        <item name="android:borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <!--默认的ListView样式-->
    <style name="default_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#dddddd</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="default_list_style_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#eeeeee</item>
