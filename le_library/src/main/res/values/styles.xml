        <item name="android:listSelector">#00000000</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="WarpLinearLayoutDefault">
        <item name="on_gravity">left</item>
        <item name="horizontal_space">20dp</item>
        <item name="vertical_space">20dp</item>
        <item name="is_full">false</item>
        <item name="max_line">0</item>
    </style>

    <style name="login_edittext_style">
        <item name="met_floatingLabel">normal</item>
        <item name="met_primaryColor">@color/le_color_bg_primary</item>
        <item name="met_underlineColor">@color/le_color_line</item>
        <item name="android:textColor">@color/le_color_text_primary</item>
        <item name="met_clearButton">false</item>
        <item name="met_floatingLabelTextColor">@color/le_color_text_primary</item>
        <item name="met_floatingLabelTextSize">@dimen/leyou_text_size_6</item>
    </style>

