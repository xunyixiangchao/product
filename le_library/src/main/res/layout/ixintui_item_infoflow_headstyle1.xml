<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ixintui_popinfoflow_iv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ixintui_popinfoflow_iv"
        android:layout_alignLeft="@+id/ixintui_popinfoflow_iv"
        android:layout_alignRight="@+id/ixintui_popinfoflow_iv"
        android:background="#33000000"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ixintui_popinfoflow_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>