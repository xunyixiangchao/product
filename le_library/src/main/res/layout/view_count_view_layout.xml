<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/button_minus"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:background="@drawable/ordernumber_reduce"
        android:gravity="center"
        android:text="－"
        android:textColor="@drawable/le_text_main_color_selector"
        android:textSize="@dimen/leyou_text_size_2" />

    <TextView
        android:id="@+id/edit_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/order_number"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="40dip"
        android:singleLine="true"
        android:text="1"
        android:textColor="@color/le_color_text_primary"
        android:textSize="@dimen/leyou_text_size_4" />

    <TextView
        android:id="@+id/button_plus"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:background="@drawable/ordernumber_add"
        android:gravity="center"
        android:text="＋"
        android:textColor="@drawable/le_text_main_color_selector"
        android:textSize="@dimen/leyou_text_size_2" />
</LinearLayout>