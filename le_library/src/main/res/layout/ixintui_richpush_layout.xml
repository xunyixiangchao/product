<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/richpushRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ixintui_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/title_bkg"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/ixintui_rp_rl_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ixintui_back"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/ixintui_rp_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <WebView
        android:id="@+id/ixintui_rp_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ixintui_titleLayout"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/ixintui_rp_rl_landingpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ImageView
            android:id="@+id/ixintui_rp_iv_landingpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/ixintui_rp_tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/ixintui_rp_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ixintui_rp_rl_dialog1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ixintui_rp_iv_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:scaleType="fitXY"/>


        <ImageView
            android:id="@+id/ixintui_rp_iv_cancle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/ixintui_rp_iv_dialog"
            android:layout_marginBottom="-40dp"
            android:layout_marginLeft="-40dp"
            android:layout_toRightOf="@+id/ixintui_rp_iv_dialog"
            android:src="@drawable/ixintui_cancle"/>


        <TextView
            android:id="@+id/ixintui_rp_tv_dialog1msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ixintui_rp_rl_dialog2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/ixintui_rp_tv_dialog2title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>


        <ImageView
            android:id="@+id/ixintui_rp_iv_dialog2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ixintui_rp_bt_dialogclick"
            android:layout_below="@+id/ixintui_rp_tv_dialog2title"
            android:layout_margin="10dp"
            android:scaleType="fitXY"/>


        <ImageView
            android:id="@+id/ixintui_rp_iv_cancle2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ixintui_cancle2"/>


        <Button
            android:id="@+id/ixintui_rp_bt_dialogclick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text=""/>
    </RelativeLayout>

    <ListView
        android:id="@+id/ixintui_rp_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ixintui_titleLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:dividerHeight="1px"
        android:scrollbars="none"
        android:visibility="gone">

    </ListView>


    <RelativeLayout
        android:id="@+id/ixintui_rp_rl_style2layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ixintui_titleLayout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/ixintui_rp_infoflow_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/ixintui_rp_infoflow_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ixintui_rp_infoflow_textview"
            android:layout_margin="8dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/ixintui_rp_infoflow_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/ixintui_rp_infoflow_imageview"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/ixintui_rp_infoflow_look"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ixintui_rp_infoflow_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="查看原文"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ixintui_rp_sv_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ixintui_titleLayout"
        android:background="@android:color/white"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ixintui_rp_iv_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/ixintui_rp_tv_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>